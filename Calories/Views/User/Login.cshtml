@model Calories.Models.UserModel

@{
    ViewData["Title"] = "Logowanie";
}

<h1>Zaloguj się</h1>

<div class="row">
    <div class="col-md-4">
        @if (ViewBag.successfulLoginMessage != null)
        {
            <div>
                <h3>@ViewBag.successfulLoginMessage</h3>
            </div>
        }
        <form asp-action="Login">
            <div class="form-group">
                <label asp-for="Login" class="control-label">Login: </label>
                <input asp-for="Login" class="form-control" />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Hasło: </label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zaloguj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Register">Nie masz jeszcze konta? Zarejestruj się!</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
